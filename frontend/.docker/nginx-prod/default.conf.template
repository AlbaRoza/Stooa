server {
    listen 80;
    listen [::]:80;
    server_name localhost;

    ${NGINX_CUSTOM_FRONTEND_CONFIG}

    location / {
        proxy_pass http://${FRONTEND}:3000;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_cache_valid 5m;
    }
}
